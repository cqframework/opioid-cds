      <def localId="30" name="Inclusion Criteria" context="Patient" accessLevel="Public">
         <annotation xsi:type="a:Annotation">
            <a:s r="30">
               <a:s>define &quot;Inclusion Criteria&quot;:&#xd;
  </a:s>
               <a:s r="29">
                  <a:s r="18">
                     <a:s r="8">
                        <a:s r="6">
                           <a:s>AgeInYears()</a:s>
                        </a:s>
                        <a:s r="7"> >= 18</a:s>
                     </a:s>
                     <a:s>&#xd;
    and </a:s>
                     <a:s r="17">
                        <a:s>not </a:s>
                        <a:s r="16">
                           <a:s>&quot;Exclusion Criteria&quot;</a:s>
                        </a:s>
                     </a:s>
                  </a:s>
                  <a:s>&#xd;
    and </a:s>
                  <a:s r="28">
                     <a:s r="26">
                        <a:s>&quot;Total MME&quot;</a:s>
                     </a:s>
                     <a:s> >= </a:s>
                     <a:s r="27">
                        <a:s>50 'mg/d'</a:s>
                     </a:s>
                  </a:s>
               </a:s>
            </a:s>
         </annotation>
         <expression localId="29" xsi:type="And">
            <operand localId="18" xsi:type="And">
               <operand localId="8" xsi:type="GreaterOrEqual">
                  <operand localId="6" precision="Year" xsi:type="CalculateAge">
                     <operand path="birthDate.value" xsi:type="Property">
                        <source name="Patient" xsi:type="ExpressionRef"/>
                     </operand>
                  </operand>
                  <operand localId="7" valueType="t:Integer" value="18" xsi:type="Literal"/>
               </operand>
               <operand localId="17" xsi:type="Not">
                  <operand localId="16" name="Exclusion Criteria" xsi:type="ExpressionRef"/>
               </operand>
            </operand>
            <operand localId="28" xsi:type="GreaterOrEqual">
               <operand localId="26" name="Total MME" xsi:type="ExpressionRef"/>
               <operand localId="27" value="50" unit="mg/d" xsi:type="Quantity"/>
            </operand>
         </expression>
      </def>
      <def localId="35" name="Taper Now" context="Patient" accessLevel="Public">
         <annotation xsi:type="a:Annotation">
            <a:s r="35">
